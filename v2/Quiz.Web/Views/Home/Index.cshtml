            title: "",
            hAxis: { title: 'TOTAL NUMBER OF QUESTIONS ANSWERED CORRECTLY', textPosition: 'none', minValue: 0, maxValue: 10 },
            width: 900,
            height: 500,
            bar: { groupWidth: "95%" },
